          <div class='col-md-4'>
            <div id='feeds-sidebar'>
              <article class='sidebar-module'>
                <div class='row title'>
                  <div class='col-md-6'>
                    <h1 class='h6 module-title'>My Journeys</h1>
                  </div>
                  <div class='col-md-6 sidebar-btns'>
                    <a class='bottom-tooltip' data-original-title='Create new' data-toggle='tooltip' href='/guide/create'>
                      <span class='icon icon-plus-add-1'></span>
                    </a>
                    <a class='bottom-tooltip' data-original-title='View all' data-toggle='tooltip' href='#'>
                      <span class='icon icon-list-binder'></span>
                    </a>
                  </div>
                </div>
                <div class='module-box'>

                  {{#if user.guides.length}}
                    {{#each user.guides}}
                      <div class='row box-row'>
                        <div class='col-md-4'>
                          <div class='image-wrap'>
                            <img class='guidePicture-sidebar' data-src='{{ places.0.picture }}'>
                          </div>
                        </div>
                        <div class='col-md-8 wrap'>
                          <header>
                            <h1 class='h5'>
                              <a href='/guide/{{ _id }}'>{{{trimString title 12}}}</a>
                            </h1>
                          </header>
                          <div class='action-btn'>
                            <a href='/guide/{{ _id }}/edit' title='Edit'>Edit</a>
                            <a class='remove' href='/guide/{{ _id }}/delete' title='Edit'>Remove</a>
                          </div>
                          <div class='icons pull-right'>
                            <span>
                              <a class='icon icon-favorite-star-fill' href='#'>
                                <span>{{ favorites.length }}</span>
                              </a>
                            </span>
                            <span>
                              <a class='icon icon-bubble-chat' href='#'>
                                <span>{{ reviews.length }}</span>
                              </a>
                            </span>
                          </div>
                        </div>
                      </div>
                    {{/each}}
                  {{else}}
                    <div class='box-row blank'>
                      <div>
                        You currently don't have any journeys.
                        <br>
                        <a href='/guide/create'>Click here to create one</a>
                      </div>
                    </div>
                  {{/if}}
                </div>
              </article>
              <article class='sidebar-module'>
                <div class='row title'>
                  <div class='col-md-6'>
                    <h1 class='h6 module-title'>My Favorites</h1>
                  </div>
                  <div class='col-md-6 sidebar-btns'>
                    <a class='bottom-tooltip' data-original-title='View all' data-toggle='tooltip' href='#'>
                      <span class='icon icon-list-binder'></span>
                    </a>
                  </div>
                </div>
                <div class='module-box'>                  
                  {{#if user.favorites.length}}
                    {{#each user.favorites}}
                      <div class='row box-row'>
                        <div class='col-md-4'>
                          <div class='image-wrap'>
                            <img src='http://ppcdn.500px.org/68114255/f358a570cb58166efec28b79a6677495c30416a9/3.jpg'>
                          </div>
                        </div>
                        <div class='col-md-8 wrap'>
                          <header>
                            <h1 class='h5'>
                              <a href='#'>{{{trimString title 12}}}</a>
                            </h1>
                          </header>
                          <span class='author'>
                            by
                            <a class='bold' href='/profile/{{ author._id }}'>{{ author.name.full }}</a>
                          </span>
                          <div class='action-btn'>
                            <a class='remove' href='#' title='Edit'>Remove</a>
                          </div>
                          <div class='user-rating pull-right'>
                            <div class='numbers'>
                              {{#if avg}} {{ avg }} {{else}} 0.0 {{/if}}
                            </div>
                          </div>
                        </div>
                      </div>
                    {{/each}}
