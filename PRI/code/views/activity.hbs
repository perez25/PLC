      {{#contentFor 'scripts'}}
        <script type='text/javascript'>
          $(document).ready(function() {
            $('#activity-nav').addClass('active');
            
            $('.authorPicture').cloudinary({ 
              secure: true, width:80, height:80, crop: 'thumb', radius: 'max' 
            });

            $('.guidePicture-sidebar').cloudinary({ 
              secure: true, width:100, height:80, crop: 'thumb' 
            });

             $('.guidePicture-activity').cloudinary({ 
              secure: true, width:232, height:232, crop: 'thumb' 
            });

          });
        </script>
      {{/contentFor}}
